FROM nginx:alpine

# Copiar build do Flutter Web
COPY app/build/web /usr/share/nginx/html

# Configuração nginx para SPA (Single Page Application)
RUN echo 'server { \
    listen 80; \
    server_name _; \
    root /usr/share/nginx/html; \
    index index.html; \
    \
    # SPA fallback - todas as rotas retornam index.html \
    location / { \
        try_files $uri $uri/ /index.html; \
    } \
    \
    # Cache para assets estáticos \
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ { \
        expires 1y; \
        add_header Cache-Control "public, immutable"; \
    } \
    \
    # Sem cache para index.html e service worker \
    location = /index.html { \
        add_header Cache-Control "no-cache, no-store, must-revalidate"; \
    } \
    location = /flutter_service_worker.js { \
        add_header Cache-Control "no-cache, no-store, must-revalidate"; \
    } \
    \
    # Proxy reverso para API \
    location /api/ { \
        proxy_pass http://estou-aqui-api:3000/api/; \
        proxy_http_version 1.1; \
        proxy_set_header Upgrade $http_upgrade; \
        proxy_set_header Connection "upgrade"; \
        proxy_set_header Host $host; \
        proxy_set_header X-Real-IP $remote_addr; \
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for; \
        proxy_set_header X-Forwarded-Proto $scheme; \
        add_header Access-Control-Allow-Origin *; \
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"; \
        add_header Access-Control-Allow-Headers "Content-Type, Authorization"; \
    } \
    \
    # WebSocket proxy para Socket.IO \
    location /socket.io/ { \
        proxy_pass http://estou-aqui-api:3000/socket.io/; \
        proxy_http_version 1.1; \
        proxy_buffering off; \
        proxy_set_header Upgrade $http_upgrade; \
        proxy_set_header Connection "upgrade"; \
        proxy_set_header Host $host; \
        proxy_set_header X-Real-IP $remote_addr; \
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for; \
    } \
    \
    # CORS headers \
    add_header Access-Control-Allow-Origin *; \
    add_header Cross-Origin-Opener-Policy same-origin-allow-popups; \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80
